{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar e Executar C",
            "type": "shell",
            "command": "gcc",
"args": [
                "-g",
                "-I${workspaceFolder}/src/include",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/lib/*.c",
                "-o",
                "${workspaceFolder}/bin/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Tarefa gerada pelo usu√°rio."
        },
        {
            "label": "Executar Programa",
            "type": "shell",
"command": "${workspaceFolder}/bin/main.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}